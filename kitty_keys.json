{
  "title": "Tetsu 9 - kitty (toggle)",
  "rules": [
    {
      "description": "Ctrl+, toggles Kitty: focus Kitty; if already focused, go back to previous app",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "comma",
            "modifiers": { "mandatory": ["left_control"] }
          },
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["^net\\.kovidgoyal\\.kitty$"]
            }
          ],
          "to": [
            {
              "key_code": "tab",
              "modifiers": ["left_command"]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "comma",
            "modifiers": { "mandatory": ["left_control"] }
          },
          "conditions": [
            {
              "type": "frontmost_application_unless",
              "bundle_identifiers": ["^net\\.kovidgoyal\\.kitty$"]
            }
          ],
          "to": [
            { "key_code": "f19" },
            { "set_variable": { "name": "Normal", "value": 0 } },
            { "set_variable": { "name": "Visual", "value": 0 } },
            {
              "software_function": {
                "open_application": { "file_path": "/Applications/kitty.app" }
              }
            }
          ]
        }
      ]
    }
  ]
}
