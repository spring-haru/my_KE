{
  "title": "Tetsu 2 - Normal Mode (Start)",
  "rules": [
    {
      "__COMMENT__": "----------------------------------------------------------",
      "description": "Ctrl-semicon -> semicolon",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "semicolon",
            "modifiers": {
              "mandatory": [
                "control"
              ]
            }
          },
          "to": [
            {
              "key_code": "semicolon"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "Normal",
              "value": 0
            },
            {
              "type": "frontmost_application_unless",
              "bundle_identifiers": [
                "^com\\.apple\\.Terminal$",
                "^com\\.googlecode\\.iterm2$",
                "org\\.vim\\.MacVim",
                "^net\\.kovidgoyal\\.kitty$"
              ]
            }
          ]
        }
      ]
    },
    {
      "__COMMENT__": " Keyboard Maestro is used to show indicators in menu bar. ",
      "description": "Start Normal Mode: semicolon",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "semicolon",
            "modifiers": {
              "mandatory": []
            }
          },
          "to": [
            {
              "key_code": "1",
              "modifiers": [
                "control",
                "shift",
                "option",
                "command"
              ]
            },
            {
              "set_variable": {
                "name": "Normal",
                "value": 1
              }
            },
            {
              "set_variable": {
                "name": "Normal_gg",
                "value": 0
              }
            },
            {
              "set_variable": {
                "name": "Normal_dd",
                "value": 0
              }
            },
            {
              "set_variable": {
                "name": "Normal_zz",
                "value": 0
              }
            },
            {
              "set_variable": {
                "name": "Normal_yy",
                "value": 0
              }
            },
            {
              "set_variable": {
                "name": "Visual",
                "value": 0
              }
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_unless",
              "bundle_identifiers": [
                "^com\\.apple\\.Terminal$",
                "^com\\.googlecode\\.iterm2$",
                "^org\\.vim\\.MacVim$",
                "^net\\.kovidgoyal\\.kitty$"
              ]
            }
          ]
        }
      ]
    }
  ]
}
