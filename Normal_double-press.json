{
  "title": "Tetsu 4 - Normal Mode (Double Presses)",
  "rules": [
    {
      "__COMMENT__": "----------------------------------------------------------",
      "description": "Normal: gg (jump to the top)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "g"
          },
          "to": [
            {
              "key_code": "up_arrow",
              "modifiers": {
                "mandatory": "command"
              }
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "Normal_gg",
              "value": 1
            },
            {
              "type": "frontmost_application_unless",
              "bundle_identifiers": [
                "^com\\.apple\\.Terminal$",
               "^com\\.googlecode\\.iterm2$",
                "org\\.vim\\.MacVim"
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "g"
          },
          "to": [
            {
              "set_variable": {
                "name": "Normal_gg",
                "value": 1
              }
            }
          ],
          "to_delayed_action": {
            "to_if_invoked": [
              {
                "set_variable": {
                  "name": "Normal_gg",
                  "value": 0
                }
              }
            ],
            "to_if_canceled": [
              {
                "set_variable": {
                  "name": "Normal_gg",
                  "value": 0
                }
              }
            ]
          },
          "conditions": [
            {
              "type": "variable_if",
              "name": "Normal",
              "value": 1
            },
            {
              "type": "frontmost_application_unless",
              "bundle_identifiers": [
                "^com\\.apple\\.Terminal$",
               "^com\\.googlecode\\.iterm2$",
                "org\\.vim\\.MacVim"
              ]
            }
          ]
        }
      ]
    },
    {
      "__COMMENT__": "----------------------------------------------------------",
