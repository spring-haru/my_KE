    {
      "__COMMENT__": " 'Key_Code = ctr+shift+option+2' for switching ON boarders for Visual. ",
      "description": "Start Visual Mode: v",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "v",
            "modifiers": {
              "mandatory": []
            }
          },
          "to": [
            {
              "key_code": "f18"
            },
            {
              "set_variable": {
                "name": "Normal",
                "value": 0
              }
            },
            {
              "set_variable": {
                "name": "Visual",
                "value": 1
              }
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "Normal",
              "value": 1
            },
            {
              "type": "frontmost_application_unless",
              "bundle_identifiers": [
              "^com\\.apple\\.Terminal$",
              "^com\\.googlecode\\.iterm2$",
              "^org\\.vim\\.MacVim$",
              "^net\\.kovidgoyal\\.kitty$"
              ]
            }
          ]
        }
      ]
    },
