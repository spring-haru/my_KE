{
  "title": "Tetsu 1 - My Key Remap",
  "rules": [
    {
      "__COMMENT__": "----------------------------------------------------------",
      "description": "Semicolon -> ESC without modifier for MacVim only【使う】",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "semicolon",
            "modifiers": {
              "mandatory": []
            }
          },
          "to": [
            {
              "key_code": "escape"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "org\\.vim\\.MacVim"
              ]
            }
          ]
        }
      ]
    },
    {
      "__COMMENT__": "----------------------------------------------------------",
      "description": "Ctrl + Semicolon -> Ctrl + Option + Semicolon 【使う】",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "semicolon",
            "modifiers": {
              "mandatory": [
                "left_control"
              ]
            }
          },
          "to": [
            {
              "key_code": "semicolon",
              "modifiers": [
                "left_control",
                "option"
              ]
            }
          ]
        }
      ]
    },
    {
      "__COMMENT__": "----------------------------------------------------------",
      "description": "Ctrl+H  -> Delete -> Option+Delete (MacVim以外) 【使う】",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "h",
            "modifiers": {
              "mandatory": [
                "control"
              ],
              "optional": [
                "caps_lock"
              ]
            }
          },
          "to": [
            {
              "key_code": "delete_or_backspace"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_unless",
              "bundle_identifiers": [
                "org\\.vim\\.MacVim"
              ]
            }
          ]
        }
      ]
    },
    {
      "__COMMENT__": "----------------------------------------------------------",
      "description": "「かな」-> Ctrl if alone 【使う】",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "japanese_kana",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "right_control",
              "lazy": true
            }
          ],
          "to_if_alone": [
            {
              "key_code": "japanese_kana"
            }
          ]
        }
      ]
    },
    {
      "__COMMENT__": "----------------------------------------------------------",
      "__COMMENT__": " fn+jkhl is remapped in the below ",
      "description": "「英数」 -> fn if alone 【使う】",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "japanese_eisuu",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "fn",
              "lazy": true
            }
          ],
          "to_if_alone": [
            {
              "key_code": "japanese_eisuu"
            }
          ]
        }
      ]
    },
    {
      "__COMMENT__": "----------------------------------------------------------",
      "__COMMENT__": " 「英数」 is remapped to fn in the above ",
      "description": "MacVim: fn+jkhl in Menu【使う】",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "j",
            "modifiers": {
              "mandatory": ["fn"]
            }
          },
          "to": [
            {
              "key_code": "down_arrow"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "Normal",
              "value": 0
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "k",
            "modifiers": {
              "mandatory": ["fn"]
            }
          },
          "to": [
            {
              "key_code": "up_arrow"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "Normal",
              "value": 0
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "h",
            "modifiers": {
              "mandatory": ["fn"]
            }
          },
          "to": [
            {
              "key_code": "left_arrow"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "Normal",
              "value": 0
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "l",
            "modifiers": {
              "mandatory": ["fn"]
            }
          },
          "to": [
            {
              "key_code": "right_arrow"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "Normal",
              "value": 0
            }
          ]
        }
      ]
    },
    {
      "__COMMENT__": "----------------------------------------------------------",
      "description": "Ctrl -> escape if alone 【使う】",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_control",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_control",
              "lazy": true
            }
          ],
          "to_if_alone": [
            {
              "key_code": "escape"
            }
          ]
        }
      ]
    },
    {
      "__COMMENT__": "----------------------------------------------------------",
      "description": "「ろ」(Underscore) -> Backslash 【使う】",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "international1",
            "modifiers": {
              "mandatory": []
            }
          },
          "to": [
            {
              "key_code": "international3",
              "modifiers": [
                "left_option"
              ]
            }
          ]
        }
      ]
    },
    {
      "__COMMENT__": "----------------------------------------------------------",
      "description": "Alfred - Buffer file management 【使う】",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "k",
            "modifiers": {
              "mandatory": [
                "left_command"
              ]
            }
          },
          "to": [
            {
              "key_code": "up_arrow",
              "modifiers": [
                "left_shift",
                "left_option"
              ]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "com\\.runningwithcrayons\\.Alfred-3"
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "l",
            "modifiers": {
              "mandatory": [
                "left_command"
              ]
            }
          },
          "to": [
            {
              "key_code": "right_arrow",
              "modifiers": [
                "left_shift",
                "left_option"
              ]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "com\\.runningwithcrayons\\.Alfred-3"
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "h",
            "modifiers": {
              "mandatory": [
                "left_command"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_arrow",
              "modifiers": [
                "left_shift",
                "left_option"
              ]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "com\\.runningwithcrayons\\.Alfred-3"
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "j",
            "modifiers": {
              "mandatory": [
                "left_command"
              ]
            }
          },
          "to": [
            {
              "key_code": "down_arrow",
              "modifiers": [
                "left_shift",
                "left_option"
              ]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "com\\.runningwithcrayons\\.Alfred-3"
              ]
            }
          ]
        }
      ]
    },
    {
      "__COMMENT__": "----------------------------------------------------------",
      "description": "Double cmd-Q -> cmd-Q",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "q",
            "modifiers": {
              "mandatory": "command"
            }
          },
          "to": [
            {
              "key_code": "q",
              "modifiers": "command"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "DoubleQ_to_Quit",
              "value": 1
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "q",
            "modifiers": {
              "mandatory": "command"
            }
          },
          "to": [
            {
              "set_variable": {
                "name": "DoubleQ_to_Quit",
                "value": 1
              }
            }
          ],
          "to_delayed_action": {
            "to_if_invoked": [
              {
                "set_variable": {
                  "name": "DoubleQ_to_Quit",
                  "value": 0
                }
              }
            ],
            "to_if_canceled": [
              {
                "set_variable": {
                  "name": "DoubleQ_to_Quit",
                  "value": 0
                }
              }
            ]
          }
        }
      ]
    }
  ]
}
